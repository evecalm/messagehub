{
  "name": "duplex-message-monorepo",
  "version": "1.0.0-alpha.1",
  "description": "makes one way message responsive, enhance postMessage/storageEvent/electron IPC/chrome extension scripts",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "build": "lerna run build",
    "dev": "parcel test/worker/index.html test/frame/index.html test/frame/frame.html test/storage/index.html --out-dir test/cache",
    "lint": "tslint --project ./tsconfig.json --config tslint.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "repository": "https://oe@github.com/oe/duplex-message.git",
  "author": "Saiya",
  "license": "MIT",
  "homepage": "https://github.com/oe/duplex-message",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/runtime-corejs2": "^7.1.2",
    "@types/node": "^10.11.2",
    "cross-env": "^5.2.0",
    "electron": "^12.0.1",
    "husky": "^1.1.3",
    "lerna": "^4.0.0",
    "parcel-bundler": "^1.10.2",
    "rimraf": "^2.6.2",
    "rollup": "^2.36.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-size-snapshot": "^0.12.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^4.1.3"
  }
}
